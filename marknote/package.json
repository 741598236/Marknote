{
  "name": "marknote",
  "version": "1.0.1",
  "description": "跨平台Markdown笔记应用，基于Electron + React + TypeScript构建，集成Vite快速开发。支持实时预览、本地安全存储、昼夜主题切换，配备TailwindCSS美化界面和定制化无边框窗口。",
  "main": "./out/main/index.js",
  "author": "路畅",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.18.6",
    "@codemirror/closebrackets": "^0.19.2",
    "@codemirror/lang-cpp": "^6.0.2",
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/lang-html": "^6.4.9",
    "@codemirror/lang-java": "^6.0.1",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-json": "^6.0.1",
    "@codemirror/lang-markdown": "^6.3.2",
    "@codemirror/lang-php": "^6.0.1",
    "@codemirror/lang-python": "^6.2.1",
    "@codemirror/lang-rust": "^6.0.1",
    "@codemirror/lang-sql": "^6.9.0",
    "@codemirror/lang-yaml": "^6.1.2",
    "@codemirror/language": "^6.11.0",
    "@codemirror/theme-one-dark": "^6.1.2",
    "@ddietr/codemirror-themes": "^1.5.1",
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "@mdxeditor/editor": "^3.33.0",
    "fs-extra": "^11.3.0",
    "jotai": "^2.12.5",
    "react-hot-toast": "^2.5.2"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^22.14.1",
    "@types/react": "^19.1.1",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "10.4.17",
    "clsx": "^2.1.1",
    "electron": "^35.1.5",
    "electron-builder": "^25.1.8",
    "electron-installer-dmg": "^5.0.1",
    "electron-vite": "^3.1.0",
    "eslint": "^9.24.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "lodash": "^4.17.21",
    "postcss": "8.4.35",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "tailwind-merge": "1.14.0",
    "tailwindcss": "3.4.1",
    "tailwindcss-accessibility": "^1.0.0",
    "typescript": "^5.8.3",
    "vite": "^6.2.6"
  }
}
